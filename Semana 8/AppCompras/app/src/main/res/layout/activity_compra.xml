<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/fondoAzulClaroPastel"
        tools:context=".Compra">

        <TextView
            android:id="@+id/productoSubTotal"
            android:layout_width="130dp"
            android:layout_height="44dp"
            android:layout_marginStart="6dp"
            android:background="@android:drawable/dialog_holo_light_frame"
            android:text="..."
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@+id/textView26"
            app:layout_constraintTop_toBottomOf="@+id/cantidadProducto" />

        <TextView
            android:id="@+id/textView26"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="44dp"
            android:layout_marginTop="19dp"
            android:text="SubTotal:"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView10" />

        <TextView
            android:id="@+id/totalPagar"
            android:layout_width="174dp"
            android:layout_height="45dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="52dp"
            android:background="@android:drawable/dialog_holo_light_frame"
            android:text="..."
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@+id/textView14"
            app:layout_constraintTop_toBottomOf="@+id/nameObsequio" />

        <TextView
            android:id="@+id/textView14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="48dp"
            android:layout_marginTop="12dp"
            android:fontFamily="sans-serif-smallcaps"
            android:text="Total a pagar:"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imgObsequioConfirmado" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:fontFamily="sans-serif-smallcaps"
            android:text="Compra Confirmada"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.526"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/bVolverComprar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="124dp"
            android:layout_marginTop="12dp"
            android:backgroundTint="@color/fondoAzul"
            android:text="Volver a comprar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/totalPagar" />

        <ImageView
            android:id="@+id/imgProductoConfirmado"
            android:layout_width="117dp"
            android:layout_height="175dp"
            android:layout_marginStart="19dp"
            android:layout_marginTop="26dp"
            android:scaleType="centerCrop"
            app:layout_constraintStart_toEndOf="@+id/productoSubTotal"
            app:layout_constraintTop_toBottomOf="@+id/textView4"
            app:srcCompat="@drawable/ic_launcher_background" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="45dp"
            android:layout_marginTop="27dp"
            android:text="Precio:"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView8" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="44dp"
            android:layout_marginTop="20dp"
            android:text="Descuento por:"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView15" />

        <ImageView
            android:id="@+id/imgObsequioConfirmado"
            android:layout_width="76dp"
            android:layout_height="67dp"
            android:layout_marginStart="45dp"
            android:layout_marginTop="11dp"
            android:scaleType="centerCrop"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView16"
            app:srcCompat="@drawable/ic_launcher_background" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="45dp"
            android:layout_marginTop="33dp"
            android:text="Producto:"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView4" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="44dp"
            android:layout_marginTop="44dp"
            android:fontFamily="sans-serif-smallcaps"
            android:text="Adicionales:"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cantidadProducto" />

        <TextView
            android:id="@+id/textView15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="44dp"
            android:layout_marginTop="16dp"
            android:text="Monto Adicionales:"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lvAdicionales" />

        <TextView
            android:id="@+id/precioProducto"
            android:layout_width="130dp"
            android:layout_height="44dp"
            android:layout_marginStart="23dp"
            android:background="@android:drawable/dialog_holo_light_frame"
            android:text="..."
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@+id/textView9"
            app:layout_constraintTop_toBottomOf="@+id/nameProducto" />

        <ListView
            android:id="@+id/lvAdicionales"
            android:layout_width="337dp"
            android:layout_height="81dp"
            android:layout_marginStart="47dp"
            android:layout_marginTop="12dp"
            android:background="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView11" />

        <TextView
            android:id="@+id/textView16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="45dp"
            android:layout_marginTop="18dp"
            android:text="Obsequio:"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView13" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="44dp"
            android:layout_marginTop="32dp"
            android:text="Descuento:"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView12" />

        <TextView
            android:id="@+id/cantidadProducto"
            android:layout_width="130dp"
            android:layout_height="44dp"
            android:layout_marginStart="4dp"
            android:background="@android:drawable/dialog_holo_light_frame"
            android:text="..."
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@+id/textView10"
            app:layout_constraintTop_toBottomOf="@+id/precioProducto" />

        <TextView
            android:id="@+id/nameProducto"
            android:layout_width="130dp"
            android:layout_height="44dp"
            android:layout_marginStart="3dp"
            android:layout_marginTop="26dp"
            android:background="@android:drawable/dialog_holo_light_frame"
            android:text="..."
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@+id/textView8"
            app:layout_constraintTop_toBottomOf="@+id/textView4" />

        <TextView
            android:id="@+id/montoAdicionales"
            android:layout_width="200dp"
            android:layout_height="43dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="8dp"
            android:background="@android:drawable/dialog_holo_light_frame"
            android:text="..."
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@+id/textView15"
            app:layout_constraintTop_toBottomOf="@+id/lvAdicionales" />

        <TextView
            android:id="@+id/nameObsequio"
            android:layout_width="200dp"
            android:layout_height="55dp"
            android:layout_marginStart="64dp"
            android:background="@android:drawable/dialog_holo_light_frame"
            android:text="..."
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@+id/imgObsequioConfirmado"
            app:layout_constraintTop_toBottomOf="@+id/montoDescuento" />

        <TextView
            android:id="@+id/montoDescuento"
            android:layout_width="201dp"
            android:layout_height="44dp"
            android:layout_marginStart="60dp"
            android:layout_marginTop="1dp"
            android:background="@android:drawable/dialog_holo_light_frame"
            android:text="..."
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@+id/textView13"
            app:layout_constraintTop_toBottomOf="@+id/tipoDescuento" />

        <TextView
            android:id="@+id/tipoDescuento"
            android:layout_width="202dp"
            android:layout_height="43dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="1dp"
            android:background="@android:drawable/dialog_holo_light_frame"
            android:text="..."
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@+id/textView12"
            app:layout_constraintTop_toBottomOf="@+id/montoAdicionales" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="45dp"
            android:layout_marginTop="23dp"
            android:text="Cantidad:"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView9" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>