<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F9FA"
    tools:context=".MainActivity">

    <!-- Diseño del encabezado de la aplicación -->
    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_gradient_orange"
        android:paddingTop="32dp"
        android:paddingBottom="24dp"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:elevation="4dp"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="sans-serif-black"
            android:letterSpacing="0.02"
            android:text="Cat Gallery"
            android:textColor="#FFFFFF"
            android:textSize="32sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="4dp"
            android:alpha="0.9"
            android:fontFamily="sans-serif-light"
            android:letterSpacing="0.05"
            android:text="Discover amazing cat breeds"
            android:textColor="#FFFFFF"
            android:textSize="14sp" />

        <!-- "Separador" -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_marginTop="12dp">

            <View
                android:layout_width="30dp"
                android:layout_height="3dp"
                android:background="#FFFFFF" />

            <View
                android:layout_width="8dp"
                android:layout_height="3dp"
                android:layout_marginStart="6dp"
                android:background="#FFFFFF"
                android:alpha="0.7" />

            <View
                android:layout_width="8dp"
                android:layout_height="3dp"
                android:layout_marginStart="6dp"
                android:background="#FFFFFF"
                android:alpha="0.5" />

        </LinearLayout>

    </LinearLayout>

    <!-- RecyclerView para la lista de los gatos-->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerCats"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="8dp"
        android:clipToPadding="false"
        android:scrollbars="vertical"
        app:layout_constraintTop_toBottomOf="@id/headerLayout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>